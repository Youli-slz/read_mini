/* article.wxss */

.separate {
  /* margin-top: 20rpx; */
  margin-bottom: 30rpx;
  height: 20rpx;
  background-color: #eee;
}

.list_new {
  display: flex;
  align-items: center;
}

.list_more {
  display: flex;
  align-items: center;
}

.list_title {
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.list_header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
  margin-top: 30rpx;
}

.single_mes {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  margin-bottom: 40rpx;
  width: 100%;
}

.single_pic {
  display: flex;
  width: 240rpx;
  height: 181rpx;
  justify-content: space-between;
  margin-right: 50rpx;
}

.single_pic image {
  width: 100%;
  height: 181rpx;
  border-radius: 10rpx;
  /* margin-right: 50rpx; */
}

.detail_mes {
  display: flex;
  flex-flow: row wrap;
  justify-content: space-between;
  align-items: center;
  width: 100%;
}

.jilu2 {
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.jilu {
  display: flex;
  align-items: center;
}

.jilu image {
  width: 30rpx;
  height: 30rpx;
  margin-right: 5rpx;
}

.new_content {
  width: 52%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.mes_new {
  font-size: 30rpx;
  color: #bfbfbf;
   margin-right: 30rpx; 
}

.detail_font {
  font-size: 30rpx;
  color: #bfbfbf;
  /* margin-left: 25%;  */
}

.line_css {
  height: 1px;
  background: #f3f3f3;
  margin: 0 0rpx;
  margin-bottom: 30rpx;
}

.new_contitle {
  width: 100%;
  margin-bottom: 20rpx;
  display: -webkit-box !important;
  overflow: hidden; /* 超出一行自动隐藏  */
  text-overflow: ellipsis; /* 文字隐藏后添加省略号  *//* white-space: nowrap;  强制不换行   */
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
