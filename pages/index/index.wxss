/**index.wxss**/
.info{
  width: 100%;
  height:365rpx;
     -webkit-filter: blur(3px);
     -moz-filter: blur(10%);
     -ms-filter: blur(3px);   
     filter: blur(1px) opacity(70%); 
     position: relative;
}
.userinfo {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  top: 30rpx;
  position: absolute;
  height: 365rpx;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #ffffff;
  font-size: 30rpx;
}

.empty_coll1{
  display: flex;
  justify-content: center;
}
.empty_coll1 image{
  margin-top: 30rpx;
  width:211rpx;
  height: 303rpx;
}
.empty_coll2{
  display: flex;
  justify-content: center;
}
.empty_coll2 image{
  margin-top: 30rpx;
  width:279rpx;
  height: 107rpx;
}


.single_mes{
  display: flex;
   flex-direction: row;
  justify-content: flex-start;
  margin-bottom: 40rpx; 
  width: 100%;
  /* justify-content: space-between;
