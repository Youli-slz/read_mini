}
.single_pic{
  display: flex;
  width: 240rpx;
  height: 181rpx;
  justify-content: space-between;
  margin-right: 50rpx;
}
.single_pic image{
  width: 100%;
  height: 181rpx;
  border-radius: 10rpx;
  /* margin-right: 40rpx; */
}
.detail_mes{
    display: flex; 
    flex-flow: row wrap;
    justify-content: space-between;
    align-items: center;
    width: 100%;
}
.new_contitle{
  width:100%;
  margin-bottom:20rpx;
  display: -webkit-box !important;
  overflow: hidden;   /* 超出一行自动隐藏  */
  text-overflow: ellipsis; /* 文字隐藏后添加省略号  */
  /* white-space: nowrap;  强制不换行   */
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
